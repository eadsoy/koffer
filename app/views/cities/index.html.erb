  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3">
        <a href="">
          <div class="card-flyer">
            <div class="text-box">
              <div class="image-box">
                  <img src="https://images.unsplash.com/photo-1468436385273-8abca6dfd8d3?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2588&q=80" alt="" />
              </div>
              <div class="text-container">
                  <h6>AMSTERDAM</h6>
                  <p>Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s.</p>
              </div>
            </div>
          </div>
        </a>
      </div>
    </div>
  </div>
</div>
<!-- second card group end -->

<!-- map -->
<div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
<!-- map -->

<!-- raw city cards -->

<div class="row">
  <% @cities.each do |city| %>
    <div class="card col-4">
        <h1><%= city.title %></h1>
        <p><%= city.description %></p>
        <p><%= city.country %></p>
        <p><%= city.score %></p>
    </div>
  <% end %>
</div>
<!-- raw city cards end -->
