<%= content_for(:navbar_class, "navbar-home") %>

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1532299033990-5bcda4141d25?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=968&q=80);">
</div>

<div class="container">

  <!-- first card group -->
    <div class="container ">
      <div class="row">
      <% @cities.each do |city| %>
        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12 container_foto ">
          <%= link_to city do %>
          <div class="ver_mas text-center">
              <span  class="lnr lnr-eye"></span>
          </div>
          <article class="text-left">
              <h2><%= city.title %></h2>
              <h4><%= city.country%></h4>
          </article>
          <%= cl_image_tag city.photo.key, crop: :fit %>
        <%end %>
      </div>
    <% end %>
  </div>
  <!-- first card group end -->



