<%= content_for(:navbar_class, "navbar-home") %>

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.2)), url(https://images.unsplash.com/photo-1532299033990-5bcda4141d25?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=968&q=80);">
   <div class="centered ">
      <h1>Koffer</h1>
      <p>Pack your Koffer, fly the nest. Join the community!</p>
    </div>
</div>

<div class="container">

  <!-- first card group -->
    <div class="container mt-4">
      <div class="row justify-content-between">
        <% @cities.each do |city| %>
          <div class=" col-sm-4 col-xs-12 ">
            <div class="container_foto mb-4">
              <%= link_to city do %>
              <div class="ver_mas text-center">
                  <span  class="lnr lnr-eye"></span>
              </div>
              <article class="text-left">
                  <h2><%= city.title %></h2>
                  <h4><%= city.country%></h4>
                  <% 5.times do  %>
                    <span class="fa fa-star"></span>
                  <% end %>
              </article>
              <%= cl_image_tag city.photo.key, crop: :fit %>
              <%end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <!-- first card group end -->

  <!-- map -->
  <div id="map"
      style="width: 100%; height: 600px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
  <!-- map -->

<%= link_to "back", request.referer.present? ? request.referer : default_path, class: "btn btn-dark" %>



