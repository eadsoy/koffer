<!-- do not delete it is for later js usage -->
<ul id="results"></ul>
<!-- do not delete end -->

<!-- search bar -->
<form novalidate="novalidate" class="simple_form search mt-5 mb-5 p-3" action="<%= cities_path %>" accept-charset="UTF-8" method="get">
  <input name="utf8" type="hidden" value="&#x2713;" />
  <div class="search-form-control form-group col-6">
    <input class="form-control string required" type="text" name="query" id="search_query" />
    <button name="button" type="submit" class="btn btn-flat">
      <div class="search-icon">
        <%= link_to cities_path, :class => 'fas fa-search' do %>
          <span class="icon-home"></span>
        <% end %>
      </div>
    </button>
  </div>
</form>
<!-- search bar end -->

<!-- first card group -->
  <div class="container ">
    <div class="row">
    <% @cities.each do |city| %>
      <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12 container_foto ">
        <%= link_to city do %>
         <div class="ver_mas text-center">
            <span  class="lnr lnr-eye"></span>
         </div>
         <article class="text-left">
            <h2><%= city.title %></h2>
            <h4><%= city.country%></h4>
         </article>
         <img src="https://images.unsplash.com/photo-1468436385273-8abca6dfd8d3?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2588&q=80" alt="">
        <%end %>
      </div>
    <% end %>
  </div>
</div>
<!-- first card group end -->



<!-- second card group -->
<!-- Topic Cards -->
