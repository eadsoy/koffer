<%= render 'shared/navbar' %>

<div class="chat-message-container">
  <div class="row no-gutters">
    <div class="col-auto text-center">
      <%= cl_image_tag message.user.avatar.key, crop: :fit, class: "avatar dropdown-toggle ml-2 mt-1" %>
    </div>
    <div class="col ">


        <div class="message-container speech-bubble " id="message-<%= message.id %>">
          <p class="mb-1 ml-2 ">
            <div class="text-left message-date">
              <small>
                <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
              </small>
            </div>
            <i class="author">
              <span> <strong><%= message.user.username %></strong> </span>
              <p class = "ml-2 speech " ><%= message.content %></p>
            </i>
          </p>


        </div>




    </div>
  </div>
</div>

