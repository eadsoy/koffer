<ul>
  <li><%= @user.first_name %></li>
  <li><%= @user.last_name %></li>
  <li><%= cl_image_tag @user.avatar.key, crop: :fit, width: 100, height: 100 %></li>
</ul>


<%= link_to "Edit Profile", edit_user_registration_path(current_user), class: "btn btn-warning" %>
<%= link_to "Users", users_path, class: "btn btn-dark" %>

<%= simple_form_for [@chatroom] do |f| %>
  <%= f.input :title, :as => :hidden, :input_html => { :value => "#{current_user.username}" } %>
  <%= f.button :submit, "message!", class:"btn btn-dark" %>
<% end %>


<% @chatrooms.each do |room| %>
  <% room.messages.where(user_id: current_user).each do |message| %>
    <% message.content %>
  <%end  %>
<% end %>
