
<%= content_for(:navbar_class, "navbar-home") %>


<% if @user.avatar.attached? %>
  <%= cl_image_tag @user.avatar.key, class: "avatar-large", alt: "avatar-large" %>
<% end %>
<h2><%= @user.first_name %> <%= @user.last_name %></h2>
<%= @user.user_cities.first[:title] %><%= @user.current_city %>

<% if @user == current_user %>
    <%= link_to "Edit Profile", edit_user_registration_path(current_user), class: "btn btn-warning", id: "user-btn" %>
<% end %>

<% if @user != current_user %>
  <%= simple_form_for [@chatroom] do |f| %>
      <%= f.input :title, :as => :hidden, :input_html => { :value => "#{current_user.username}" } %>
      <%= f.button :submit, "message!", class:"btn btn-dark" %>
  <% end %>
<% end %>




<p><%= @user.description %></p>



<% if @user != current_user %>
<!-- user review -->
  <div class="rating-form mt-15 p-2">
    <span>What do you think about <%= @user.first_name %>  ?</span>
    <%= simple_form_for [@user, @review] do |f| %>
    <div class="form-inputs">
      <%= f.input :content,
                  as: :text,
                  label: false %>
      <fieldset class="rating">
        <%=f.radio_button :stars, 5, :id => "star5" %><label for="star5" title="Excellent!"></label>
        <%=f.radio_button :stars, 4, :id => "star4" %> <label for="star4" title="Good!"></label>
        <%=f.radio_button :stars, 3, :id => "star3" %> <label for="star3" title="Average!"></label>
        <%=f.radio_button :stars, 2, :id => "star2" %> <label for="star2" title="Poor!"></label>
        <%=f.radio_button :stars, 1, :id => "star1" %> <label for="star1" title="Very Poor!"></label>
      </fieldset>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
<!-- user review end -->
<% end %>

  <div class="reviews">
    <ul class="list-group">
      <% if @user.reviews.nil? %>
        <% 5.times do  %>
            <span class="far fa-star"></span>
        <% end %>
      <% else %>
        <% @user.reviews.reverse.each do |review| %>
          <div class="review mb-5 mt-3">
            <li class="list-group-item">
              <% review.stars.times do  %>
                <span class="fas fa-star"></span>
              <% end %>
              <% (5 - review.stars).times do  %>
                <span class="far fa-star"></span>
              <% end %>
              <p><%= review.content%></p>
            </li>
          </div>
        <% end %>
      <% end %>
    </ul>
  </div>


<% if @user == current_user %>
  <%= simple_form_for [@user_city] do |f| %>
    <%= f.input :title, label: "City", required: false, :collection => %w[Amsterdam Istanbul Berlin Paris] %>
    <%= f.submit 'Add', class: 'btn btn-dark'%>
  <% end %>
<% end %>


<% current_user.user_cities.each do |city| %>
  <%= city.title %>
<% end %>





<% if @user == current_user %>
  <%= simple_form_for [@user_interest] do |f| %>
    <%= f.association :interest, required: false, input_html: { multiple: true } %>
    <%= f.submit 'Add', class: 'btn btn-dark'%>
  <% end %>
<% end %>



<% if current_user.user_interests.present? %>
  <% current_user.user_interests.each do |interest| %>
    <%= interest.title %>
  <% end %>
<% end %>







